# Enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
   test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
   alias ls='ls --color=auto'
   alias dir='dir --color=auto'
   alias vdir='vdir --color=auto'

   alias grep='grep --color=auto'
   alias fgrep='fgrep --color=auto'
   alias egrep='egrep --color=auto'
fi

# Listing
alias l='ls -h'
alias l1='ls -1'
alias ll='ls -lAh'
alias lrt='ls -lAhrt'
alias lrs='ls -lAhrS'

# Quick move
alias up='cd ..'
alias up2='up; up'
alias up3='up2;up'
alias up4='up2;up2'

# Easier symbolic links
alias lns='ln -s'

# Vim
alias nv='nvim'
alias nvi='nvim'

# Quick edit
alias ea='nvim ~/.aliases'
alias ec='nvim ~/.bashrc'
alias eg='nvim ~/.gitconfig'
#alias ev='nvim ~/.vimrc ~/.vim/*rc'
alias ev='nvim ~/.nvimrc'
alias en='nvim ~/.config/nvim/init.vim'

# Quick reload
alias ra='source ~/.aliases'
alias rc='source ~/.bashrc'
alias rg='source ~/.gitconfig'

# Add PID for jobs
alias jobs='jobs -l'

# Git aliases
alias gst='git status'
alias gci='git commit'
alias gco='git checkout'
alias gadd='git add'
alias gpush='git push'
alias gpull='git pull'
alias gfetch='git fetch'
alias gdiff='git diff'
alias ggr='git gr'
alias gbranch='git branch'
alias gsub='git submodule'

# Mercurial aliases
alias hst='hg status'
alias hci='hg commit'
alias hco='hg checkout'
alias hadd='hg add'
alias hpush='hg push'
alias hpull='hg pull'
alias hdiff='hg diff'

# Send xclip selection to clipboard
alias xclip='xclip -selection clipboard'

# OpenLane
alias openlane='docker run -it -v ${PDK_ROOT}/openlane:/openLANE_flow -v $PDK_ROOT:$PDK_ROOT -e PDK_ROOT=$PDK_ROOT -u $(id -u $USER):$(id -g $USER) openlane:rc2'
